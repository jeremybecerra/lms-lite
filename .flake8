[flake8]
max-line-length = 140
# Reglas que no nos interesan para esta rúbrica
ignore = E501,E203,W503,E266,E402
# Exclusiones por defecto del repo
exclude = .git,__pycache__,.pytest_cache,.mypy_cache,build,dist,web
# MUY IMPORTANTE: fuera todo venv y site-packages
extend-exclude = .venv,venv,env,**/site-packages/**
# Ignoros por archivo para blueprints/modelos
per-file-ignores =
    app/__init__.py:F401
    app/models.py:F401
    app/routes/*.py:F401,F405
