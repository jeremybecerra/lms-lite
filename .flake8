[flake8]
max-line-length = 140
# Ignoros comunes en APIs: E203/W503 (PEP8 vs black), E266 (##), E402 (imports no al inicio), E501 (línea larga)
extend-ignore = E203,W503,E266,E402,E501
# Ignoros por archivo para no pelear con imports usados indirectamente en blueprints/modelos
per-file-ignores =
    app/__init__.py: F401
    app/models.py: F401
    app/routes/*.py: F401,F405
